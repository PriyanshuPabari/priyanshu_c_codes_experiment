// 4.	Declare a static local variable inside a function. 
// Observe how its value persists across function calls.

#include <stdio.h>

void showMarks() {
    static int priyanshuMarks = 10;
    priyanshuMarks++; 
    printf("Priyanshu's Marks = %d\n", priyanshuMarks);
}

int main() {
    showMarks();
    showMarks();
    showMarks();
    return 0;
}
